<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:state="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="24dp"
            android:paddingRight="12dp"
            android:orientation="horizontal">
        <com.miscell.stateimage.StateImageButton
                android:id="@+id/star_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_star_selector"
                android:clickable="true"
                state:color_selected="#3697FD"
                state:color_disabled="#CACACA"
                state:image_normal="@drawable/star_normal"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onButtonClicked"
                android:text="Button"
                android:textSize="14sp"
                android:textColor="@android:color/black"/>
    </LinearLayout>
</LinearLayout>
